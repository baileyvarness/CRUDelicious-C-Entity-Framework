@model Dish

<div class="container">
  <div class="row">
    <div class="col text-center">
      <h2>Add a new Dish!</h2>
    </div>
  </div>
</div>
<br>
<br>


<form asp-action="createDish" asp-controller="Home" method="post">

    <div class="container">
        <div class="row">
            <div class="col">
                <a href="/">Home</a>
                <br>
                <br>
                <span asp-validation-for="Chef"></span>
                <label asp-for="Chef"></label>
                <input asp-for="Chef">
                <span asp-validation-for="Name"></span>
                <label asp-for="Name"></label>
                <input asp-for="Name">
                <span asp-validation-for="Calories"></span>
                <label asp-for="Calories"></label>
                <input asp-for="Calories">
            </div>

            <div class="col">
                <span asp-validation-for="Tastiness"></span>
                <label asp-for="Tastiness"></label>
                <select asp-for="Tastiness">
                    <option value="1">1</option>
                    <option value="2">2</option>
                    <option value="3">3</option>
                    <option value="4">4</option>
                    <option value="5">5</option>
                </select>
            </div>

            <div class="col">
                <span asp-validation-for="Description"></span>
                <label asp-for="Description"></label>
                <textarea asp-for="Description" cols="30" rows="10"></textarea>

                <button>Add Dish</button>
            </div>
        </div>
    </div>

</form>